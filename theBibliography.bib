@article{Fiorenzato2019,
    author           = {Fiorenzato, Eleonora and Strafella, Antonio P and Kim, Jinhee and Schifano, Roberta and Weis, Luca and Antonini, Angelo and Biundo, Roberta},
    date             = {2019-09},
    journaltitle     = {Brain},
    title            = {Dynamic functional connectivity changes associated with dementia in {Parkinson}’s disease},
