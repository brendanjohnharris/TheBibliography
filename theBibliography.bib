    date             = {2003-07},
    journaltitle     = {Journal of Neurophysiology},
    title            = {Propagating {Wave} and {Irregular} {Dynamics}: {Spatiotemporal} {Patterns} of {Cholinergic} {Theta} {Oscillations} in {Neocortex} {In} {Vitro}},
