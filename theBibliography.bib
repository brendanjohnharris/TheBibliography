}

@article{Tolosi2011,
    author           = {Tolosi, Laura and Lengauer, Thomas},
    date             = {2011-07},
    journaltitle     = {Bioinformatics},
    title            = {Classification with correlated features: unreliability of feature ranking and solutions},
