@article{Dong2021,
    author           = {Dong, Qiao and Chen, Xueqin and Dong, Shi and Zhang, Jun},
    date             = {2021-03},
    journaltitle     = {Journal of Infrastructure Preservation and Resilience},
    title            = {Classification of pavement climatic regions through unsupervised and supervised machine learnings},
