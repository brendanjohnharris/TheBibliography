@article{Lee2021,
    author           = {Lee, Namgil and Kim, Jong-Min},
    date             = {2021-08},
    journaltitle     = {Neuroscience Research},
    title            = {Dynamic functional connectivity analysis based on time-varying partial correlation with a copula-{DCC}-{GARCH} model},
