@article{Peng2016,
    author           = {Chenhui Peng and Taras Turiv and Yubing Guo and Qi-Huo Wei and Oleg D. Lavrentovich},
    date             = {2016},
    journaltitle     = {Science},
    title            = {Command of active matter by topological defects and patterns},
