    journaltitle     = {Scientific Reports},
    title            = {A {Comparison} of {Static} and {Dynamic} {Functional} {Connectivities} for {Identifying} {Subjects} and {Biological} {Sex} {Using} {Intrinsic} {Individual} {Brain} {Connectivity}},
