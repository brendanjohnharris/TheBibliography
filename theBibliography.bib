    keywords         = {Action Potentials, Animals, Biological Clocks, Brain Waves, CA1 Region, Hippocampal, Male, Neurons, Rats, Long-Evans, Sleep, REM, Theta Rhythm, Wakefulness},
    modificationdate = {2023-09-03T12:01:46},
