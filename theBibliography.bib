@article{Belluscio2012,
    author           = {Belluscio, Mariano A. and Mizuseki, Kenji and Schmidt, Robert and Kempter, Richard and Buzsáki, György},
    date             = {2012-01},
    journaltitle     = {The Journal of Neuroscience: The Official Journal of the Society for Neuroscience},
    title            = {Cross-frequency phase-phase coupling between θ and γ oscillations in the hippocampus},
