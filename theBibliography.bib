    date             = {2021-02},
    journaltitle     = {{NeuroImage}},
    title            = {Histology‐Based Average Template of the Marmoset Cortex With Probabilistic Localization of Cytoarchitectural Areas},
    doi              = {10.1016/j.neuroimage.2020.117625},
