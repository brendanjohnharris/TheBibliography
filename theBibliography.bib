@Article{Fournier2020,
  author           = {Julien Fournier and Aman B. Saleem and E. Mika Diamanti and Miles J. Wells and Kenneth D. Harris and Matteo Carandini},
  date             = {2020},
  journaltitle     = {Current Biology},
  title            = {Mouse Visual Cortex Is Modulated by Distance Traveled and by Theta Oscillations},
  doi              = {10.1016/j.cub.2020.07.006},
  issn             = {0960-9822},
  number           = {19},
  pages            = {3811--3817.e6},
  url              = {https://www.sciencedirect.com/science/article/pii/S0960982220309969},
  volume           = {30},
  abstract         = {The visual responses of neurons in the primary visual cortex (V1) are influenced by the animal's position in the environment. V1 responses encode positions that co-fluctuate with those encoded by place cells in hippocampal area CA1. This correlation might reflect a common influence of non-visual spatial signals on both areas. Place cells in CA1, indeed, do not rely only on vision; their place preference depends on the physical distance traveled and on the phase of the 6--9 Hz theta oscillation. Are V1 responses similarly influenced by these non-visual factors? We recorded V1 and CA1 neurons simultaneously while mice performed a spatial task in a virtual corridor by running on a wheel and licking at a reward location. By changing the gain that couples the wheel movement to the virtual environment, we found that ∼20\% of V1 neurons were influenced by the physical distance traveled, as were ∼40\% of CA1 place cells. Moreover, the firing rate of ∼24\% of V1 neurons was modulated by the phase of theta oscillations recorded in CA1 and the response profiles of ∼7\% of V1 neurons shifted spatially across the theta cycle, analogous to the phase precession observed in ∼37\% of CA1 place cells. The influence of theta oscillations on V1 responses was more prominent in putative layer 6. These results reveal that, in a familiar environment, sensory processing in V1 is modulated by the key non-visual signals that influence spatial coding in the hippocampus.},
  creationdate     = {2024-05-15T13:58:37},
  groups           = {Spatiotemporal motifs, PhD},
  keywords         = {primary visual cortex, hippocampus, navigation, distance coding, theta oscillation, virtual reality},
  modificationdate = {2025-09-16T09:07:13},
}

@article{Zold2015,
    author           = {Camila L. Zold and Marshall G. Hussain Shuler},
    date             = {2015},
    journaltitle     = {Journal of Neuroscience},
    title            = {Theta Oscillations in Visual Cortex Emerge with Experience to Convey Expected Reward Time and Experienced Reward Rate},
    doi              = {10.1523/JNEUROSCI.0296-15.2015},
    eprint           = {https://www.jneurosci.org/content/35/26/9603.full.pdf},
    issn             = {0270-6474},
    number           = {26},
    pages            = {9603--9614},
    url              = {https://www.jneurosci.org/content/35/26/9603},
    volume           = {35},
    abstract         = {The primary visual cortex (V1) is widely regarded as faithfully conveying the physical properties of visual stimuli. Thus, experience-induced changes in V1 are often interpreted as improving visual perception (i.e., perceptual learning). Here we describe how, with experience, cue-evoked oscillations emerge in V1 to convey expected reward time as well as to relate experienced reward rate. We show, in chronic multisite local field potential recordings from rat V1, that repeated presentation of visual cues induces the emergence of visually evoked oscillatory activity. Early in training, the visually evoked oscillations relate to the physical parameters of the stimuli. However, with training, the oscillations evolve to relate the time in which those stimuli foretell expected reward. Moreover, the oscillation prevalence reflects the reward rate recently experienced by the animal. Thus, training induces experience-dependent changes in V1 activity that relate to what those stimuli have come to signify behaviorally: when to expect future reward and at what rate.},
    creationdate     = {2024-05-15T14:02:59},
    file             = {:Zold2015.pdf:PDF},
    groups           = {Spatiotemporal motifs, PhD},
    modificationdate = {2024-11-18T14:48:34},
    publisher        = {Society for Neuroscience},
}

