@report{Douchamps2022,
    author           = {Douchamps, Vincent and Volo, Matteo di and Torcini, Alessandro and Battaglia, Demian and Goutagny, Romain},
    date             = {2022-10},
    institution      = {{bioRxiv}},
    title            = {Hippocampal gamma oscillations form complex ensembles modulated by behavior and learning},
