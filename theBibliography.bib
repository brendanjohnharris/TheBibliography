@article{Orczyk2021,
    author           = {Orczyk, John J. and Barczak, Annamaria and Costa-Faidella, Jordi and Kajikawa, Yoshinao},
    date             = {2021},
    journaltitle     = {Journal of Neuroscience},
    title            = {Cross Laminar Traveling Components of Field Potentials due to Volume Conduction of Non-Traveling Neuronal Activity in Macaque Sensory Cortices},
    doi              = {10.1523/JNEUROSCI.3225-20.2021},
