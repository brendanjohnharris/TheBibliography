@article{Abarbanel1996,
    author           = {Abarbanel, Henry D. I. and Gills, Z. and Liu, C. and Roy, R.},
    date             = {1996-01},
    journaltitle     = {Physical Review A},
    title            = {Nonlinear-time-series analysis of chaotic laser dynamics},
    doi              = {10.1103/PhysRevA.53.440},
