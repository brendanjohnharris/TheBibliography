@article{Zhong2007,
    author           = {Zhong, Yuru and Jan, Kung-Ming and Ju, Ki H. and Chon, Ki H.},
    date             = {2007-11},
    journaltitle     = {IEEE Transactions on Biomedical Engineering},
    title            = {Representation of {Time}-{Varying} {Nonlinear} {Systems} {With} {Time}-{Varying} {Principal} {Dynamic} {Modes}},
    doi              = {10.1109/TBME.2007.895748},
    issn             = {1558-2531},
    number           = {11},
    pages            = {1983--1992},
    volume           = {54},
    abstract         = {System identification of nonlinear time-varying (TV) systems has been a daunting task, as the number of parameters required for accurate identification is often larger than the number of data points available, and scales with the number of data points. Further, a 3-D graphical representation of TV second-order nonlinear dynamics without resorting to taking slices along one of the four axes has been a significant challenge to date. In this paper, we present a TV principal dynamic mode (TVPDM) method which overcomes these deficiencies. The TVPDM, by design, reduces one dimension, and by projecting PDM coefficients onto a set of basis functions, both nonstationary and nonlinear dynamics can be characterized. Another significant advantage of the TVPDM is its ability to discriminate the signal from noise dynamics, and provided that signal dynamics are orthogonal to each other, it has the capability to separate them. The efficacy of the proposed method is demonstrated with computer simulation examples comprised of various forms of nonstationarity and nonlinearity. The application of the TVPDM to the human heart rate and arterial blood pressure data during different postures is also presented and the results reveal significant nonstationarity even for short-term data recordings. The newly developed method has the potential to be a very useful tool for characterizing nonlinear TV systems, which has been a significant, challenging problem to date.},
    groups           = {Systems, BaselinePCA},
    keywords         = {Time varying systems, Nonlinear systems, TV, Nonlinear dynamical systems, System identification, Computer simulation, Application software, Humans, Heart rate, Arterial blood pressure, Basis functions, nonlinear, principal dynamic modes, time varying},
    modificationdate = {2024-05-06T09:19:23},
}

@article{Menon2019,
    author           = {Menon, Sreevalsan S. and Krishnamurthy, K.},
