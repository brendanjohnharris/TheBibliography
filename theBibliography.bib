    file             = {:Townsend2018.pdf:PDF},
    groups           = {Neural Dynamics, PhD, Spatiotemporal motifs},
    keywords         = {Velocity, Wave propagation, Marmosets, Signal filtering, Singular value decomposition, Vision, Principal component analysis, Waves},
    modificationdate = {2024-11-25T14:30:59},
