    date             = {2013-11},
    journaltitle     = {{PLOS} {ONE}},
    title            = {Large-Scale Information Flow in Conscious and Unconscious States: an {ECoG} Study in Monkeys},
    doi              = {10.1371/journal.pone.0080845},
    issn             = {1932-6203},
    number           = {11},
    pages            = {e80845},
