@Article{Liu2022a,
  author           = {Liu, Zilu and Han, Fang and Wang, Qingyun},
  date             = {2022},
  journaltitle     = {Nonlinear Dynamics},
  title            = {A review of computational models for gamma oscillation dynamics: from spiking neurons to neural masses},
